{% extends '../template/template.twig' %}
{% block content %}

<form action={{ "/todos/" ~ todos.id }} method="PUT">
    <div class="form-group">
        <input name="message" type="text" class="form-control" value="{{todos.message}}">
    </div>
    <div class="form-group">
    <select class="form-control" id="exampleFormControlSelect1" placeholder="Select">
    {% for todo in todos %}
        <option>{{todo.completion}}</option>
    {% endfor %}
    </select>
    </div>  
    <button type="submit" class="btn btn-primary">Update !</button>
</form>
{% endblock %}