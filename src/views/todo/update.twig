{% extends '../template/template.twig' %}
{% block content %}

<form action="/todos/update?_method=PUT" method="POST">
    <div class="form-group">
        <input name="message" type="text" class="form-control" value="{{todo.message}}">
    </div>
    <div class="form-group">
    <select name="completion" class="form-control" id="exampleFormControlSelect1" placeholder="Select">
    {% for item in completions %}
        <option>{{item}}</option>
    {% endfor %}
    </select>
    </div>
    <input name="todoId" type="hidden" value="{{todo.id}}">
    <button type="submit" class="btn btn-primary">Update !</button>
</form>
{% endblock %}